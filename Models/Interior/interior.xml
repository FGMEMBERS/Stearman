<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>structure</object-name>
    <object-name>planchet</object-name>
    <object-name>marches</object-name>
    <object-name>sieges</object-name>
    <object-name>cablages</object-name>
    
    <object-name>mancheA</object-name>
    <object-name>manetteA1</object-name>
    <object-name>manetteA2</object-name>

    <object-name>mancheB</object-name>
    <object-name>manetteB1</object-name>
    <object-name>manetteB2</object-name>
    <object-name>manetteB3</object-name>
    <object-name>manetteB4</object-name>
    
    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>intvitres</object-name>
  </effect>
  
  <!-- Pilote -->
  <model>
    <path>Aircraft/Stearman/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -0.744 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.139 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord pilote -->
  <model>
    <path>Aircraft/Stearman/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -0.862 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.470 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord co pilote -->
  <model>
    <path>Aircraft/Stearman/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -1.753 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.467 </z-m>
    </offsets>
  </model>

  <!-- Animation du manche avant -->
  <animation>
    <type>rotate</type>
    <object-name>mancheA</object-name>
    <property>/controls/flight/elevator</property>
    <factor>10</factor>
    <center>
      <x-m> -1.62142 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.11521 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>mancheA</object-name>
    <property>/controls/flight/aileron</property>
    <factor>10</factor>
    <center>
      <x-m> -1.62142 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.11521 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <!-- Animation du manche arriÃ¨re -->
  <animation>
    <type>rotate</type>
    <object-name>mancheB</object-name>
    <property>/controls/flight/elevator</property>
    <factor>10</factor>
    <center>
      <x-m> -0.74249 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.11521 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>mancheB</object-name>
    <property>/controls/flight/aileron</property>
    <factor>10</factor>
    <center>
      <x-m> -0.74249 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.11521 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <!-- Throttle -->
  <animation>
    <type>rotate</type>
    <object-name>manetteA2</object-name>
    <property>controls/engines/engine/throttle</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> -15 </dep></entry>
      <entry><ind> 1 </ind><dep>  70 </dep></entry>
    </interpolation>
    <center>
      <x-m> -1.76904 </x-m>
      <y-m> -0.24925 </y-m>
      <z-m>  0.13319 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>manetteB2</object-name>
    <property>controls/engines/engine/throttle</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> -15 </dep></entry>
      <entry><ind> 1 </ind><dep>  70 </dep></entry>
    </interpolation>
    <center>
      <x-m> -0.89028 </x-m>
      <y-m> -0.24925 </y-m>
      <z-m>  0.13319 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
</PropertyList>
