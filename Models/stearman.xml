<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>stearman.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/Stearman/Models/Liveries", 10);
    </load>
    <unload>
      livery_update.stop();
    </unload>
  </nasal>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>ailesB</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>ailesH</object-name>
    <object-name>ailes2</object-name>
    <object-name>jambes</object-name>
    <object-name>derive</object-name>
    <object-name>profondeur</object-name>
    <object-name>direction</object-name>
    <object-name>axeG</object-name>
    <object-name>articuleGH</object-name>
    <object-name>articuleGB</object-name>
    <object-name>roueG</object-name>
    <object-name>axeD</object-name>
    <object-name>articuleDH</object-name>
    <object-name>articuleDB</object-name>
    <object-name>roueD</object-name>
    <object-name>axeA</object-name>
    <object-name>roueA</object-name>
    <object-name>tourvitres</object-name>
    <object-name>trous</object-name>
    <object-name>bol</object-name>
    <object-name>helice</object-name>
    <object-name>barres</object-name>
    <object-name>divers</object-name>
    <object-name>montants</object-name>
    <object-name>pieds</object-name>
    <object-name>rebord</object-name>
    <object-name>grille</object-name>
    <object-name>arbres</object-name>

    <!-- Objets transparents -->
    <object-name>vitres</object-name>
    <object-name>propblur</object-name>
    <object-name>propdisc</object-name>
    <object-name>cables</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>glass_shader.png</texture>
    <object-name>vitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>propblur</object-name>
    <object-name>propdisc</object-name>
    <object-name>vitres</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name>
    <object-name>ailesB</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>ailesH</object-name>
    <object-name>ailes2</object-name>
    <object-name>jambes</object-name>
    <object-name>derive</object-name>
    <object-name>profondeur</object-name>
    <object-name>direction</object-name>
    <object-name>axeG</object-name>
    <object-name>articuleGH</object-name>
    <object-name>articuleGB</object-name>
    <object-name>roueG</object-name>
    <object-name>axeD</object-name>
    <object-name>articuleDH</object-name>
    <object-name>articuleDB</object-name>
    <object-name>roueD</object-name>
    <object-name>axeA</object-name>
    <object-name>roueA</object-name>
    <object-name>tourvitres</object-name>
    <object-name>trous</object-name>
    <object-name>bol</object-name>
    <object-name>helice</object-name>
    <object-name>barres</object-name>
    <object-name>divers</object-name>
    <object-name>montants</object-name>
    <object-name>pieds</object-name>
    <object-name>rebord</object-name>
    <object-name>grille</object-name>
    <object-name>arbres</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
<!--
    <diffuse>
      <red-prop>diffuse/red</red-prop>
      <green-prop>diffuse/green</green-prop>
      <blue-prop>diffuse/blue</blue-prop>
    </diffuse>

    <ambient>
      <red-prop>ambient/red</red-prop>
      <green-prop>ambient/green</green-prop>
      <blue-prop>ambient/blue</blue-prop>
    </ambient>
-->
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>

    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
<!--
    <shininess>
      <shininess-prop>shininess</shininess-prop>
    </shininess>
-->
  </animation>

  <!-- Intérieur -->
  <model>
    <path>Aircraft/Stearman/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </offsets>
  </model>

  <!-- Moteur -->
  <model>
    <path>Aircraft/Stearman/Models/Engine/r670.xml</path>
    <offsets>
      <x-m> -3.207 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.123 </z-m>
    </offsets>
  </model>

  <!-- L'hélice --> 
  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -3.558 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.123 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>/surface-positions/left-aileron-pos-norm</property>
    <factor> 15 </factor>
    <center>
      <x-m> -0.854 </x-m>
      <y-m> -2.742 </y-m>
      <z-m> -0.305 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>/surface-positions/right-aileron-pos-norm</property>
    <factor> 15 </factor>
    <center>
      <x-m> -0.854 </x-m>
      <y-m>  2.742 </y-m>
      <z-m> -0.305 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Gouvernes de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>/surface-positions/rudder-pos-norm</property>
    <factor> 20 </factor>
    <center>
      <x-m> 2.825 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.601 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>/surface-positions/elevator-pos-norm</property>
    <factor> 20 </factor>
    <center>
      <x-m> 2.709 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.373 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Compression -->
  <animation>
    <type>rotate</type>
    <object-name>articuleGB</object-name>
    <property>/gear/gear[0]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.00 </ind><dep>   4 </dep></entry>
      <entry><ind> 1.00 </ind><dep> -30 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -2.407 </x1-m>
      <y1-m> -0.805 </y1-m>
      <z1-m> -1.059 </z1-m>
      <x2-m> -2.407 </x2-m>
      <y2-m> -0.772 </y2-m>
      <z2-m> -1.076 </z2-m>
    </axis>
  </animation>

  <animation>
    <name>TrainGauche</name>
    <object-name>axeG</object-name>
    <object-name>articuleGB</object-name>
    <object-name>roueG</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>TrainGauche</object-name>
    <property>/gear/gear[0]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.00 </ind><dep>  0.04 </dep></entry>
      <entry><ind> 0.13 </ind><dep>  0.00 </dep></entry>
      <entry><ind> 1.00 </ind><dep> -0.20 </dep></entry>
    </interpolation>
    <axis>
      <x>  0.000000 </x>
      <y> -0.052605 </y>
      <z> -0.103242 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>articuleGH</object-name>
    <property>/gear/gear[0]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.00 </ind><dep> -4 </dep></entry>
      <entry><ind> 0.13 </ind><dep>  0 </dep></entry>
      <entry><ind> 1.00 </ind><dep> 30 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -2.407 </x1-m>
      <y1-m> -0.737 </y1-m>
      <z1-m> -0.926 </z1-m>
      <x2-m> -2.407 </x2-m>
      <y2-m> -0.704 </y2-m>
      <z2-m> -0.943 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>articuleDB</object-name>
    <property>/gear/gear[1]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.00 </ind><dep>   4 </dep></entry>
      <entry><ind> 0.13 </ind><dep>   0 </dep></entry>
      <entry><ind> 1.00 </ind><dep> -30 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -2.407 </x1-m>
      <y1-m>  0.772 </y1-m>
      <z1-m> -1.076 </z1-m>
      <x2-m> -2.407 </x2-m>
      <y2-m>  0.805 </y2-m>
      <z2-m> -1.059 </z2-m>
    </axis>
  </animation>

  <animation>
    <name>TrainDroit</name>
    <object-name>axeD</object-name>
    <object-name>articuleDB</object-name>
    <object-name>roueD</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>TrainDroit</object-name>
    <property>/gear/gear[1]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.00 </ind><dep>  0.04 </dep></entry>
      <entry><ind> 0.13 </ind><dep>  0.00 </dep></entry>
      <entry><ind> 1.00 </ind><dep> -0.20 </dep></entry>
    </interpolation>
    <axis>
      <x>  0.000000 </x>
      <y>  0.052605 </y>
      <z> -0.103242 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>articuleDH</object-name>
    <property>/gear/gear[1]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.00 </ind><dep> -4 </dep></entry>
      <entry><ind> 0.13 </ind><dep>  0 </dep></entry>
      <entry><ind> 1.00 </ind><dep> 30 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -2.407 </x1-m>
      <y1-m>  0.704 </y1-m>
      <z1-m> -0.943 </z1-m>
      <x2-m> -2.407 </x2-m>
      <y2-m>  0.737 </y2-m>
      <z2-m> -0.926 </z2-m>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>/gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -2.363 </x-m>
      <y-m> -0.956 </y-m>
      <z-m> -1.113 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>/gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -2.363 </x-m>
      <y-m>  0.956 </y-m>
      <z-m> -1.113 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueA</object-name>
    <property>/gear/gear[2]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m>  2.957 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.295 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

